{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    

    <!-- Font Icon -->
    <link rel="stylesheet" href="Styles/loginregistro/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="Styles/loginregistro/css/style.css">

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Registrate!</h2>
                      
                            {# <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="name" id="name" placeholder="Nombre"/>
                            </div> #}
                            <div class="form-group">

                           <label for="email" class="zmdi zmdi-email"></label>
                            {{ form_row(registrationForm.email, {
                                'label': ' ',
                                'attr': {
                                    'type': 'email',
                                    'id': 'email',
                                    'placeholder': 'Email'
                                }
                            }) }}
                               
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                {{ form_row(registrationForm.plainPassword.first, {
                                'label': ' ',
                                'attr': {
                                    'type': 'password',
                                    'name': 'pass',
                                    'id': 'pass',
                                    'placeholder': 'Contraseña',

                                }
                            }) }}

                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                              {{ form_row(registrationForm.plainPassword.second, {
                                'label': ' ',
                                'attr': {
                                    'type': 'password',
                                    'name': 'pass',
                                    'id': 'pass',
                                    'placeholder': 'Contraseña',

                                }
                            }) }}
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>Acepto los <a href="#" class="term-service">terminos de servicio</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Registrarse"/>

                         
                            </div>
                   
                    </div>
                    <div class="signup-image">
                        <figure><img src="Styles/loginregistro/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="{{path('app_login')}}" class="signup-image-link">Ya estoy registrado</a>
                    </div>
                </div>
            </div>
        </section>
    </div>



    {{ form_end(registrationForm) }}
    {% endblock %} 